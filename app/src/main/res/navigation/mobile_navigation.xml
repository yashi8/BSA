<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.yashishu.bsa.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_adminDashboardFragment"
            app:destination="@id/adminDashboardFragment" />
        <action
            android:id="@+id/action_navigation_home_to_vendorDashboardFragment"
            app:destination="@id/vendorDashboardFragment" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_dashboard"
            app:destination="@id/navigation_dashboard" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.yashishu.bsa.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.yashishu.bsa.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/adminDashboardFragment"
        android:name="com.yashishu.bsa.ui.admin.AdminDashboardFragment"
        android:label="fragment_admin_dashboard"
        tools:layout="@layout/fragment_admin_dashboard" />
    <fragment
        android:id="@+id/vendorDashboardFragment"
        android:name="com.yashishu.bsa.ui.vendor.VendorDashboardFragment"
        android:label="fragment_vendor_dashboard"
        tools:layout="@layout/fragment_vendor_dashboard" >
        <action
            android:id="@+id/action_vendorDashboardFragment_to_addProductFragment"
            app:destination="@id/addProductFragment" />
        <action
            android:id="@+id/action_vendorDashboardFragment_to_productListFragment"
            app:destination="@id/productListFragment" />
        <action
            android:id="@+id/action_vendorDashboardFragment_to_ordersFragment"
            app:destination="@id/ordersFragment" />
        <action
            android:id="@+id/action_vendorDashboardFragment_to_customerSupport"
            app:destination="@id/customerSupport" />
    </fragment>
    <fragment
        android:id="@+id/addProductFragment"
        android:name="com.yashishu.bsa.ui.vendor.AddProductFragment"
        android:label="fragment_add_product"
        tools:layout="@layout/fragment_add_product" >
        <action
            android:id="@+id/action_addProductFragment_to_vendorDashboardFragment"
            app:destination="@id/vendorDashboardFragment" />
    </fragment>
    <fragment
        android:id="@+id/productListFragment"
        android:name="com.yashishu.bsa.ui.vendor.ProductListFragment"
        android:label="fragment_product_list2"
        tools:layout="@layout/fragment_product_list" >
        <action
            android:id="@+id/action_productListFragment_to_vendorDashboardFragment"
            app:destination="@id/vendorDashboardFragment" />
        <action
            android:id="@+id/action_productListFragment_to_viewProducts"
            app:destination="@id/viewProducts" />
    </fragment>
    <fragment
        android:id="@+id/ordersFragment"
        android:name="com.yashishu.bsa.ui.vendor.OrdersFragment"
        android:label="fragment_orders"
        tools:layout="@layout/fragment_orders" >
        <action
            android:id="@+id/action_ordersFragment_to_vendorDashboardFragment"
            app:destination="@id/vendorDashboardFragment" />
    </fragment>
    <fragment
        android:id="@+id/viewProducts"
        android:name="com.yashishu.bsa.ui.vendor.ViewProductsFragment"
        android:label="fragment_view_products"
        tools:layout="@layout/fragment_view_products" >
        <action
            android:id="@+id/action_viewProducts_to_productListFragment"
            app:destination="@id/productListFragment" />
    </fragment>
    <fragment
        android:id="@+id/customerSupport"
        android:name="com.yashishu.bsa.ui.CustomerSupport"
        android:label="fragment_customer_support"
        tools:layout="@layout/fragment_customer_support" >
        <action
            android:id="@+id/action_customerSupport_to_vendorDashboardFragment"
            app:destination="@id/vendorDashboardFragment" />
    </fragment>
</navigation>