<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_vendor_home">
    <fragment
        android:id="@+id/navigation_vendor_dashboard"
        android:name="com.yashishu.bsa.ui.vendor.VendorDashboardFragment"
        android:label="VendorDashboardFragment" >
        <action
            android:id="@+id/action_navigation_vendor_dashboard_to_ordersFragment"
            app:destination="@id/ordersFragment" />
        <action
            android:id="@+id/action_navigation_vendor_dashboard_to_customerSupport"
            app:destination="@id/customerSupport" />
    </fragment>
    <fragment
        android:id="@+id/navigation_user_home"
        android:name="com.yashishu.bsa.ui.home.UserHomeFragment"
        android:label="UserHomeFragment" />
    <fragment
        android:id="@+id/navigation_vendor_product"
        android:name="com.yashishu.bsa.ui.vendor.ProductListFragment"
        android:label="ProductListFragment" >
        <action
            android:id="@+id/action_navigation_vendor_product_to_addProductFragment"
            app:destination="@id/addProductFragment" />
        <action
            android:id="@+id/action_navigation_vendor_product_to_viewProductsFragment"
            app:destination="@id/viewProductsFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_vendor_home"
        android:name="com.yashishu.bsa.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.yashishu.bsa.ui.notifications.NotificationsFragment"
        android:label="fragment_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/addProductFragment"
        android:name="com.yashishu.bsa.ui.vendor.AddProductFragment"
        android:label="AddProductFragment" >
        <action
            android:id="@+id/action_add_product_fragment_to_navigation_vendor_product"
            app:destination="@id/navigation_vendor_product" />
    </fragment>
    <fragment
        android:id="@+id/viewProductsFragment"
        android:name="com.yashishu.bsa.ui.vendor.ViewProductsFragment"
        android:label="ViewProductsFragment" />
    <fragment
        android:id="@+id/ordersFragment"
        android:name="com.yashishu.bsa.ui.vendor.OrdersFragment"
        android:label="fragment_orders"
        tools:layout="@layout/fragment_orders" />
    <fragment
        android:id="@+id/customerSupport"
        android:name="com.yashishu.bsa.ui.CustomerSupport"
        android:label="CustomerSupport" />
</navigation>