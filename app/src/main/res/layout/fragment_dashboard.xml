<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboards"
    tools:context=".ui.user.DashboardFragment">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btncustomersuuports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Customer Support"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:backgroundTint="@color/lightgreen"
        app:iconTint="@color/lb"
        app:layout_constraintEnd_toEndOf="@+id/cart2"
        app:layout_constraintStart_toStartOf="@+id/cart2"
        app:layout_constraintTop_toBottomOf="@+id/cart2" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/cart2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="Shop Buddy"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:backgroundTint="@color/lightgreen"
        app:iconTint="@color/lb"
        app:layout_constraintEnd_toEndOf="@+id/shopbuddy"
        app:layout_constraintStart_toStartOf="@+id/shopbuddy"
        app:layout_constraintTop_toBottomOf="@+id/shopbuddy" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/shopbuddy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:text="My Orders"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:backgroundTint="@color/lightgreen"
        app:iconTint="@color/lb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>